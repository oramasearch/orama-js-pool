{
    "compilerOptions": {
      "allowJs": true,
      "target": "ESNext",
      "module": "NodeNext",
      "outDir": "dist",
      "lib": ["ESNext", "DOM"],
      "esModuleInterop": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "moduleResolution": "nodenext",
      "removeComments": true,
    },
    "include": ["src/*.ts", "src/**/*.ts"]
}